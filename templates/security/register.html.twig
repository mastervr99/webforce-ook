{% extends 'base.html.twig' %}

{% block body %}

    <div class="page-content">
        <div class="container">
            <div class="row form-v2-content mx-auto ">

                <div class="col-md-6 photo ">
                    <div class="form-left">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-detail">
                        <h2>Créer mon compte</h2>
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_row(form.lastname) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.firstname) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.plainPassword) }}
                        </div>

                        <div class="form-group">
                            <button class="btn-valider btn-block" type="submit">Valider</button>
                        </div>
                        {{ form_end(form) }}


                        <div class="sentence">
                            <a href="#" >J'ai déjà un compte</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
