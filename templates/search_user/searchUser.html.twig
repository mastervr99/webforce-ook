{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(search_form) }}
    <div class="form-group">
        {{ form_row(search_form.lastname) }}
    </div>
    <div class="form-group">
        {{ form_row(search_form.firstname) }}
    </div>
    <div class="form-group">
        {{ form_row(search_form.email) }}
    </div>
    <div class="form-group">
        {{ form_row(search_form.postalCode) }}
    </div>
    <div class="form-group">
        {{ form_row(search_form.city) }}
    </div>
    <div class="form-group">
        {{ form_row(search_form.emploi) }}
    </div>

    <div class="form-group">
        <button class="btn-valider btn-block" type="submit">Rechercher</button>
    </div>
    {{ form_end(search_form) }}


    <div class="container">
        <ul class="list-group list-group-flush">
            {% for user in users %}
                <li class="list-group-item">
                    <div class="contact" id="contact">
                        <div class="row">
                            <div class="col-sm-7 col-md-4  d-flex align-items-center">
                                <div class="d-flex align-items-center">
                                    <div class="text">
                                        {{ user.lastname }} {{ user.firstname }}
                                        <br>
                                        <small> {{ user.emploi }}</small>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-1 col-md-1 d-flex justify-content-center mx-auto my-auto">
                                <a class="btn btn-link btn-info nav-link mr-3" href="{{ path('app_index_chat', {'id': user.id}) }}"><i class="far fa-comments"></i></a>
                                <a class="btn btn-link btn-info nav-link mr-3" href="{{ path('app_user_profiluser', {'id': user.id}) }}"><i class="fas fa-user-circle"></i></a>
                                <a class="btn btn-link btn-info nav-link mr-3" href="{{ path('app_contact_addcontact', {'id': user.id}) }}"><i class="fas fa-user-plus"></i></a>
                            </div>

                        </div>
                    </div>
                </li>
            {% else %}
                <div class="alert alert-info mt-5">Aucun utilisateur trouv√©</div>
            {% endfor %}
        </ul>
    </div>
{% endblock %}

