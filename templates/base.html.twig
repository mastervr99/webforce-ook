<!DOCTYPE html>
<html>
<body>
<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_index_index') }}">WebForce_ook</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation"><span
                    class="navbar-toggler-icon"></span></button>


        <div class="collapse navbar-collapse" id="navbarCollapse">

            {#                SI LE USER EST CONNECTE#}
            {% if app.user %}
                <div class="col-sm-12 col-md-4" id="recherche">
                    <form id="search-form" class="form-inline" role="form" action="{{ path('app_searchuser_searchuser') }}">
                        <div class="input-group">
                            <input type="text" name="search" class="form-control search-form" placeholder="Rechercher un utilisateur">
                            <span class="input-group-btn">
                                <button type="submit" class="btn search-btn" data-target="#search-form"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </form>
                </div>

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_user_listcontact') }}">Mes contacts</a></li>
                    <li class="nav-item dropdown"><a class="nav-link dropdown-toggle" href="#" id="menuadmin" role="button"
                                                     data-toggle="dropdown">Mon compte</a>
                        <div class="dropdown-menu" aria-labelledby="menuadmin">
                            <a class="dropdown-item" href="{{ path('app_user_moncompte') }}">Mon compte</a>
                            <a class="dropdown-item" href="{{ path('app_contact_createcontact') }}">Ajouter un contact</a>
                            <hr>
                            <a class="dropdown-item" href="{{ path('app_security_logout') }}">Deconnexion</a>
                            {#                    AJOUTER LES LIENS ADMIN#}

                            {#                    FIN LIENS ADMIN#}
                        </div>
                    </li>
                </ul>
            {% else %}
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_security_register') }}">M'inscrire</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_security_login') }}">Me connecter</a></li>
                    <li class="nav-item"><a class="nav-link" href="<?= URL . 'faq.php' ?>">FAQ</a></li>
                </ul>
            {% endif %}

        </div>
    </div>
</nav>
<div class="container">

    {#AFFICHER LES MESSAGES FLASH#}
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages  %}
            {# pour la classe alert-danger du bootstrap #}
            {% if type == 'error' %}
                {% set type = 'danger' %}
            {% endif %}
            <div class="alert alert-{{ type }} mt-2">
                {{ message|raw }}
            </div>
        {% endfor %}
    {% endfor %}
</div>

{% block body %}

{% endblock %}


<footer class="row bg-dark text-light text-center py-3">
    <div class="col-12">
        &copy; {{ "now" |date("Y") }} - WebForce_ook - Tous droits réservés
    </div>
</footer>

