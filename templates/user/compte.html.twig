{% extends 'base.html.twig' %}

{% block body %}


<div class="page-content">
    <div class="container">
        <div class="row form-v2-content mx-auto ">

            <div class="col-md-6 photo ">
                <div class="form-left">
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-detail">
                    <h2>Mon compte</h2>

                    {#AFFICHER LES MESSAGES FLASH#}
                    {% for type, messages in app.session.flashBag.all %}
                        {% for message in messages  %}
                            {# pour la classe alert-danger du bootstrap #}
                            {% if type == 'error' %}
                                {% set type = 'danger' %}
                            {% endif %}
                            <div class="alert alert-{{ type }} mt-2">
                                {{ message|raw }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.phone) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.postalCode) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.adress) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.city) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.photo) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.emploi) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.dateBirth) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.notePerso) }}
                    </div>
                    <div class="form-group">
                        <h4>Changer mon email</h4>
                        {{ form_row(form.email) }}
                    </div>

                    <div class="form-group">
                        <button class="btn-valider btn-block" type="submit">Valider</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
