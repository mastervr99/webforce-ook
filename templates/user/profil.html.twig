{% extends 'base.html.twig' %}

{% block body %}

    <section id="MAIN-CONTAINER">

        <div class="container">

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <p class="date-ajout">DATE DE CREATION DU PROFIL</p>
                </div>
            </div>

            <section class="row justify-content-center">

                <!------- section gauche --------->

                <section class="col-sm-7 col-md-3 col-lg-3 justify-content-center" id="user-profile-left">
                    <div class="card">

                        <!--- photo--->
                        {% if user.photo %}
                            <img class="card-img-top" src="{{ asset('photo/' ~ user.photo ) }}"
                                 alt="Titre de la photo">
                        {% else %}
                            <img class="card-img-top" src="https://source.unsplash.com/random"
                                 alt="Titre de la photo">
                        {% endif %}


                        <div class="card-body text-center">

                        <!--- infos--->
                        <h5 class="card-title user-lastname text-fluid">{{ user.lastname }}</h5>
                        <h5 class="card-title user-firstname text-fluid">{{ user.firstname }}</h5>
                        <p class="card-text user-job">{{ user.emploi }}</p>
                        <!--- bouton modifier-->
                        <a class="btn btn-labeled btn-info user-btn" type="submit"
                           href="{{ path('app_user_moncompte') }}">
                             <i class="fa fa-pen"></i>
                            <span class="align-middle">Modifier</span>
                        </a>

                    </div>
                </div>
            </section>

            <!------- section droite --------->

            <div class="col-md-5">
                <div id="user-profile-right">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item title">
                            <i class="pictos-title fas fa-user"></i>
                            <h5 class="card-title">A propos</h5>
                        </li>
                        <li class="list-group-item">
                            <i class="pictos fas fa-phone"></i>
                            <p class="infos">{{ user.phone }}</p>
                        </li>
                        <li class="list-group-item">
                            <div><i class="pictos fa fa-envelope "></i></div>
                            <div><p class="infos">{{ user.email }}</p></div>
                        </li>
                        <li class="list-group-item">
                            <i class="pictos fa fa-home"></i>
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-text infos">{{ user.adress }}</p>
                                    <p class="card-text infos">{{ user.city }}</p>
                                    <p class="card-text infos">{{ user.postalCode }}</p>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div id="map">
                        <!-- ici mini map -->
                    </div>
                </div>
            </div>
        </section>
    </div> <!-- END CONTAINER -->


