{% extends 'base.html.twig' %}

{% block body %}
    <body id="bodycolor">
    <main>
        {#<div class="form-group">#}
        {#{{ form_label(form.nom) }}#}
        {#{{ form_widget(form.nom) }}#}
        {#</div>#}

        <div class="form-container">


            <!------- profile-left--------->
            <div class="container">
                <div class="row justify-content-md-center">

                    <section class="col-md-3" id="user-profile-left">
                        <div class="card">
                            <img class="user-photo card-img-top" src="/public/img/04.jpg" alt="Card image title">
                            <div class="card-body text-center">
                                {#<h5 class="card-title user-lastname text-fluid">DeLaFontaine</h5>#}
                                {#<h5 class="card-title user-firstname text-fluid">Jean-Marc</h5>#}
                                {#<p class="card-text user-job">Développeur intégrateur-web</p>#}
                                <button type="button" class="btn btn-labeled btn-info user-btn">
                                    <ion-icon class="align-middle" name="camera"></ion-icon>
                                    <span class="align-middle">Ajouter une photo</span>
                                </button>

                            </div>
                        </div>
                    </section>

                    <!------- profile-right--------->

                    <section class="col-md-7" id="my-profile">
                        <h3 class="text-center mb-4">Nouveau contact</h3>
                        <hr class="hr-title">


                        {#AFFICHER LES MESSAGES FLASH#}
                        {% for type, messages in app.session.flashBag.all %}
                            {% for message in messages %}
                                {# pour la classe alert-danger du bootstrap #}
                                {% if type == 'error' %}
                                    {% set type = 'danger' %}
                                {% endif %}
                                <div class="alert alert-{{ type }} mt-2">
                                    {{ message|raw }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        {{ form_start(form) }}
                        <div class="row form-group">
                            <div class="col-sm-3 col-form-label">{{ form_label(form.nom) }}</div>
                            <div class="col-sm-7">{{ form_widget(form.nom) }}</div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-3 col-form-label">{{ form_label(form.prenom) }}</div>
                            <div class="col-sm-7">{{ form_widget(form.prenom) }}</div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-3 col-form-label">{{ form_label(form.phone) }}</div>
                            <div class="col-sm-7">{{ form_widget(form.phone) }}</div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-3 col-form-label">{{ form_label(form.email) }}</div>
                            <div class="col-sm-7">{{ form_widget(form.email) }}</div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-3 col-form-label">{{ form_label(form.emploi) }}</div>
                            <div class="col-sm-7">{{ form_widget(form.emploi) }}</div>
                        </div>
                        <div class="row form-group form-separator">
                            <div class="col-sm-3 col-form-label">{{ form_label(form.dateBirth) }}</div>
                            <div class="col-sm-7">{{ form_widget(form.dateBirth) }}</div>
                        </div>


                        <div class="row form-group">
                            <div class="col-sm-3 col-form-label">{{ form_label(form.adress) }}</div>
                            <div class="col-sm-7">{{ form_widget(form.adress) }}</div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-3 col-form-label">{{ form_label(form.postalCode) }}</div>
                            <div class="col-sm-7">{{ form_widget(form.postalCode) }}</div>
                        </div>
                        <div class="row form-group form-separator">
                            <div class="col-sm-3 col-form-label">{{ form_label(form.city) }}</div>
                            <div class="col-sm-7">{{ form_widget(form.city) }}</div>
                        </div>


                        <div class="row form-group form-separator">
                            <div class="col-sm-3 col-form-label">{{ form_label(form.notePerso) }}</div>
                            <div class="col-sm-7">{{ form_widget(form.notePerso) }}</div>
                        </div>


                        <button type="submit" class="btn btn-labeled btn-info user-btn btn-validate">
                            <ion-icon class="align-middle" name="checkbox-outline"></ion-icon>
                            <span class="align-middle">Enregistrer le nouveau contact</span>
                        </button>

                        {# A CHACKER ATTENTION RETRAIT DE LA BALISE PHOTOS
                        du coup le mot photos apparait tt en bas#}

                        {{ form_end(form) }}
                    </section>
                </div>
            </div>
        </div><!-- END CONTAINER -->

    </main>
    </body>
{% endblock %}
