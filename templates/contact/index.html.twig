        </div>

        <div class="col-sm-12 col-md-4">
            <a class="list-group-item ' . $activeall . '" href="?categ=*">Tous les contacts</a>
            <div class ="form-group ">
                <select class="form-control"  id="exampleFormControlSelect 1">
                    <option value="'  . $activeall . ' href = "?categ =*">Tous les contacts</option>
    <div class="container">
        <ul>
            {% for contact in contacts %}
                <li class="nav-item">
                 {#
                    <a class="nav-link"
                       href="{{ path('app_category_index', {'id': category.id}) }}">
                        {{ category }}
                    </a>
                 #}
                </li>
            {% endfor %}
        </ul>
    </div>

{% endblock %}
